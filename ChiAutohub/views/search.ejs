<form action="/search" method="get">
<h1> Search </h1>
<input type="text" name="searchcriteria"> 
<input type="submit" value="Go">
</form>
	
<% if (allrecs.length > 0) {%>
		<table border=1>
			<tr>
				<th>Vehicle ID</th>
				<th>Vehicle Name</th>
				<th>Vehicle Description</th>
				<th>Vehicle Amount</th>
			</tr>
      	<% allrecs.forEach((recref, index) => { %>
			<tr>
				<td><%= recref.vehicle_id %></td>
				<td><%= recref.vehicle_name %></td>
				<td><%= recref.vehicle_description %></td>
				<td><%= recref.vehicle_amount %></td>
				<td><a href='/vehicles/<%= recref.vehicle_id %>'> Details</a></td>
                </tr>
        <% }); %>
		</table>

<% } else { %>
            <p>No results from search...try something else..</p>
<% } %>
