<h1> Vehicles Table Listing </h1>
<% if (allrecs.length > 0) {%>
		<table border=1>
			<tr>
					<th> Vehicle ID </th>
					<th> Vehicle Name </th>
					<th> Vehicle Description </th>
					<th> Vehicle Amount </th>
			</tr>
      	<% allrecs.forEach((recref, index) => { %>
			<tr>
				<td><%= recref.vehicle_id %></td>
				<td><%= recref.vehicle_name %></td>
				<td><%= recref.vehicle_description %></td>
				<td><%= recref.vehicle_amount %></td>
				<td><a href='/vehicles/<%= recref.vehicle_id %>'> Details</a></td>
				<td><a href='/vehicles/<%= recref.vehicle_id %>/edit'>Edit</a></td>
				<td><a href='/vehicles/<%= recref.vehicle_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>

                </tr>
        <% }); %>
		</table>

        <% } else { %>
            <p>Not Records Available</p>
        <% } %>
<p> <a href='/vehicles/addrecord'>Add New</a> </p>
