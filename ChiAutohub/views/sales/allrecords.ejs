<h1> Sales Table Listing </h1>
<% if (allrecs.length > 0) {%>
		<table border=1>
			<tr>
					<th> Dealer ID </th>
					<th> Customer ID </th>
					<th> Sale ID </th>
					<th> Sale Name </th>
					<th> Sale Amount </th>
					<th> Sale Description </th>
					<th> Sale Date </th>
					<th> Vehicle ID </th>
			</tr>
      	<% allrecs.forEach((recref, index) => { %>
			<tr>
				<td><%= recref.dealer_id %></td>
				<td><%= recref.customer_id %></td>
				<td><%= recref.sale_id %></td>
				<td><%= recref.sale_name %></td>
				<td><%= recref.sale_amount %></td>
				<td><%= recref.sale_description %></td>
				<td><%= recref.sale_date %></td>
				<td><%= recref.vehicle_id %></td>
				<td><a href='/sales/<%= recref.sale_id %>'> Details</a></td>
				<td><a href='/sales/<%= recref.sale_id %>/edit'>Edit</a></td>
				<td><a href='/sales/<%= recref.sale_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>

                </tr>
        <% }); %>
		</table>

        <% } else { %>
            <p>Not Records Available</p>
        <% } %>
<p> <a href='/sales/addrecord'>Add New</a> </p>
