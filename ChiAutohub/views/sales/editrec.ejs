<h1> Edit Sale </h1>
<form action="/sales/save" method="post">
   <input type="hidden" name="sale_id" value="<%= rec.sale_id %>" >
   <table>
		<tr> <td> Dealer ID: </td> <td> <input type="number" name="dealer_id" value=<%= rec.dealer_id %> required>  </td> </tr>
		<tr> <td> Customer ID: </td> <td> <input type="number" name="customer_id" value=<%= rec.customer_id %> required> </td> </tr>
		<tr> <td> Sale Name: </td> <td> <textarea name="sale_name" rows="1" cols="20"> </textarea> </td> </tr>
		<tr> <td> Sale Amount: </td> <td> <input type="number" name="sale_amount" value=<%= rec.sale_amount %> required> </td> </tr>
		<tr> <td> Sale Description: </td> <td> <textarea name="sale_description" rows="10" cols="20"> </textarea> </td> </tr>
		<tr> <td> Sale Date: </td> <td> <input type="date" name="sale_date" value=<%= rec.sale_date %> required> </td> </tr>
		<tr> <td> Vehicle ID: </td> <td> <input type="number" name="vehicle_id" value=<%= rec.vehicle_id %> required> </td> </tr>
   </table>
   <button type="submit">Save</button>
</form>
