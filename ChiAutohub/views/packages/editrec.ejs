<h1> Edit Package </h1>
<form action="/packages/save" method="post">
   <input type="hidden" name="package_id" value="<%= rec.package_id %>" >
   <table>
		<tr> <td> Dealer ID: </td> <td> <input type="number" name="dealer_id" value=<%= rec.dealer_id %> required> </td> </tr>
		<tr> <td> Sale ID: </td> <td> <input type="number" name="sale_id" value=<%= rec.sale_id %> required> </td> </tr>
		<tr> <td> Package Name: </td> <td> <textarea name="package_name" rows="10" cols="20"><%= rec.package_name %> </textarea> </td> </tr>
		<tr> <td> Vehicle ID: </td> <td> <input type="number" name="vehicle_id" value=<%= rec.vehicle_id %> required> </td> </tr>
   </table>
   <button type="submit">Save</button>
</form>
